// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roles {
  id    Int     @id @default(autoincrement())
  role  String  @unique
  Users Users[] @relation()
}

model Users {
  id          Int     @id @default(autoincrement())
  roleId      Int
  login       String  @unique
  password    String
  name        String
  lastName    String
  photoLink   String?
  description String?

  Roles         Roles           @relation(fields: [roleId], references: [id])
  Requests      Requests[]      @relation()
  MasterClasses MasterClasses[] @relation()
}

model DanceStyles {
  id            Int             @id @default(autoincrement())
  style         String
  description   String?
  ClassesStyles ClassesStyles[]
}

model MasterClasses {
  id          Int     @id @default(autoincrement())
  title       String
  creatorId   Int
  videoLink   String?
  imageLink   String?
  description String?
  price       Float

  Descriptions  Descriptions[]  @relation()
  Users         Users?          @relation(fields: [creatorId], references: [id])
  ClassesStyles ClassesStyles[]
}

model Descriptions {
  id            Int      @id @default(autoincrement())
  classId       Int
  evenDate      DateTime
  place         String
  countOfPeople Int

  MasterClasses MasterClasses @relation(fields: [classId], references: [id])
  Requests      Requests[]
}

model Requests {
  id            Int      @id @default(autoincrement())
  userId        Int
  descriptionId Int
  createdDate   DateTime

  Descriptions Descriptions? @relation(fields: [descriptionId], references: [id])
  Users        Users         @relation(fields: [userId], references: [id])
}

model ClassesStyles {
  classId Int
  style   DanceStyles   @relation(fields: [styleId], references: [id])
  styleId Int
  classes MasterClasses @relation(fields: [classId], references: [id])

  @@id([classId, styleId])
}
